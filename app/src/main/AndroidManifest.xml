<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="elbainteraction.polisenapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=" "
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DrawerActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:parentActivityName=".DrawerActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="elbainteraction.polisenapp.DrawerActivity" />
        </activity>

        <activity
            android:name=".AddAnmalanActivity"
            android:label="@string/title_activity_add_anmalan"
            android:parentActivityName=".DrawerActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="elbainteraction.polisenapp.DrawerActivity" />
        </activity>
    </application>

</manifest>
