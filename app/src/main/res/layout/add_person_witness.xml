<!--Change layout visibility to gone. -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/text_margin"
    android:id="@+id/add_new_container"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:layout_marginTop="-0dp">

    <!--Vittnesbeskrivning-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input.header.witness"
        android:textSize="@dimen/header_text_size"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"

        android:layout_marginBottom="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="true"
        android:scaleX="0"
        android:scaleY="0"
        />

    <!--Förnamn -->
    <android.support.design.widget.TextInputLayout android:scaleX="0"
        android:scaleY="0" android:id="@+id/input.layout.fabrikat" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input.firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.firstname"
            android:inputType="textPersonName"
            />
    </android.support.design.widget.TextInputLayout>

    <!--Efternamn -->
    <android.support.design.widget.TextInputLayout android:scaleX="0"
        android:scaleY="0" android:id="@+id/input.layout.lastname" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input.lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.lastname"
            android:inputType="textPersonName"
            />
    </android.support.design.widget.TextInputLayout>

    <!--Personnummer -->
    <android.support.design.widget.TextInputLayout android:scaleX="0"
        android:scaleY="0" android:id="@+id/input.layout.ssnumber" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input.ssnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.ssnumber"
            />
    </android.support.design.widget.TextInputLayout>

    <!--Kontaktuppgifter-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input.header.wittnesscontact"
        android:textSize="@dimen/header_text_size"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="true"
        android:scaleX="0"
        android:scaleY="0"
        />

    <!--Telefonnummer -->
    <android.support.design.widget.TextInputLayout
        android:scaleX="0"
        android:scaleY="0"
        android:id="@+id/input.layout.phonenbr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input.phonenbr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.phonenbr"
            android:inputType="phone"
            />
    </android.support.design.widget.TextInputLayout>

    <!--E-post -->
    <android.support.design.widget.TextInputLayout android:scaleX="0"
        android:scaleY="0" android:id="@+id/input.layout.email" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input.email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint.email"
            android:inputType="textEmailAddress"
            />
    </android.support.design.widget.TextInputLayout>

    <!-- Skapa vittne-->
    <Button
        android:scaleX="0"
        android:scaleY="0"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lägg till vittne"
        android:background="@android:color/holo_green_light"
        android:onClick="onCreatePressed"/>
</LinearLayout>