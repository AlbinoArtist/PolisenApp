<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elbainteraction.polisenapp.LoginBankidFragment"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"

    >


    <!--Personnummer -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input.layout.fabrikat" android:layout_width="match_parent" android:layout_height="wrap_content">
    <EditText
        android:id="@+id/inteviktigt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Personnummer (책책책책mmddxxxx)"
        android:inputType="number"
        />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logga in med BankID"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:onClick="loginBankID"/>

</LinearLayout>
