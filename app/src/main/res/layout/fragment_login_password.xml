<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elbainteraction.polisenapp.LoginPasswordFragment"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input.layout.fabrikat" android:layout_width="match_parent" android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editpersonnummer"
        android:hint="Personnummer (ååååmmddxxxx)"
        android:textSize="15sp"
        />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input.layout.fabrikat2" android:layout_width="match_parent" android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editpassword"
        android:hint="Lösenord"
        android:textSize="15sp"
        />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logga in med lösenord"
        android:id="@+id/loginButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:onClick="login"/>

</LinearLayout>


